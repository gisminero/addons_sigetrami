<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.module.category" id="exp_canon.autorizaciones" >
      <field name="name">SIGETRAMI.Pago de Canon</field>
      <field name="description">Controla si el usuario tiene permisos para realizar pago de canon.</field>
      <field name="sequence">30</field>
    </record>

   <record id="exp_canon_autorizado_no" model="res.groups">
     <field name="name">No autorizado</field>
     <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
     <field name="users" eval="[(4, ref('base.user_root'))]"/>
     <field name="category_id" ref="exp_canon.autorizaciones"/>
    </record>

    <record id="exp_canon_autorizado" model="res.groups">
      <field name="name">Autorizado</field>
      <field name="implied_ids" eval="[(4, ref('exp_canon.exp_canon_autorizado_no'))]"/>
      <field name="category_id" ref="exp_canon.autorizaciones"/>
    </record>

</odoo>

